{
  "env": {
    "browser": true,
    "es2021": true,
    "cypress/globals": true,
    "mocha": true
  },
  "plugins": ["cypress"],
  "extends": [
    "airbnb",
    "eslint:recommended",
    "plugin:prettier/recommended",
    "@react-natice-community"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": 0,
    "linebreak-style": ["error", "windows"],
    "spaced-comment": "off",
    "import/no-extraneous-dependencies": [
      "error",
      { "devDependencies": ["**/cypress/**", "**/*.config.js"] }
    ]
  }
}
